sudo pacman -S mtpfs
paru jmtpfs
sudo pacman -S gvfs-mtp
sudo pacman -Sy gvfs-gphoto2
reboot

###################################

# Enable MTP Support with mtpfs

$ sudo pacman -S mtpfs
$ paru jmtpfs
$ sudo pacman -S gvfs-mtp

# Enable PTP Support

$ sudo pacman -Sy gvfs-gphoto2

$ reboot